<% if @errors.present? %>
  <div class="error">
    <ul>
      <% @errors.each do |error| %>
        <li><%= error%></li>  
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @plan do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %> 
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description %> 
  </div>
  <div class="form-actions">
    <%= form.submit %>
  </div>
<% end %>