<h1>Plans</h1>

<div class="plan">
  <% @plans.each do |plan| %>
    <h3>
      <%= link_to plan.name, plan_path(plan) %>
    </h3>

    <p>
      <%= plan.description %>
    </p>
    
    <ul>
      <li>
        <%= link_to "Edit", edit_plan_path(plan) %>
      </li>
      <li>
        <%= link_to "Delete", plan_path(plan), data: {
          confirm: "Are you sure to delete: #{plan.name}?",
        }, method: :delete %>
      </li>
    </ul>
  <% end %>
</div>  