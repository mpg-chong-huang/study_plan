<%= render partial: "particals/errors" %>

<%= form_for @recipes do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %> 
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description %> 
  </div>
  <div class="form-actions">
    <%= form.submit %>
  </div>
<% end %>